# === COLETOR / FONTE DE DADOS ===
COLLECTOR=eth
CHAIN_NAME=ETH

# Múltiplas URLs RPC (failover). Separe por vírgula.
ETH_RPC_URL=https://ethereum.publicnode.com,https://eth.llamarpc.com,https://cloudflare-eth.com

# Quantos blocos voltar a cada varredura e limite de transações por rodada
ETH_BLOCKS_BACK=20
ETH_MAX_TX=100

# Filtra transações ETH com valor mínimo (em ETH). Deixe 0.0 para não filtrar por valor.
ETH_INCLUDE_ETH_VALUE_MIN=0.01

# Lista extra de carteiras para monitoramento automático (separe por vírgula; minúsculas).
# Ex.: hot wallets / carteiras públicas movimentadas.
ETH_MONITOR_ADDRESSES=0x28c6c06298d514db089934071355e5743bf21d60,0x7a250d5630b4cf539739df2c5dacb4c659f2488d

# Intervalo (segundos) entre coletas no modo --daemon
POLL_SECONDS=20

# === DASHBOARD ===
DASHBOARD_DEFAULT_CHAIN=ETH

# === ENGINE / REGRAS ===
# Limiar para alerta/pendência (score < limiar)
SCORE_ALERT_THRESHOLD=50

# Parâmetros de regras
AMOUNT_THRESHOLD=10000
VELOCITY_WINDOW_MIN=10
VELOCITY_MAX_TX=5

# === TELEGRAM (opcional; best-effort) ===
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
